{%- extends "csp-file-base.h.j2" %}

{%- block includes %}
#include "apm32f10x.h"
#include "apm32f10x_eint.h"
#include "apm32f10x_gpio.h"
#include "apm32f10x_misc.h"
#include "apm32f10x_rcm.h"
{%- endblock %}

{%- block define %}
    {%- for pin in Project["PinConfigs"]|sort %}
        {%- set label = Project["PinConfigs"][pin]["Comment"] %}
        {%- if label %}
/**< {{pin}} --> {{label}} */
#define {{label}}_PORT GPIO{{pin[1]}}
#define {{label}}_PIN GPIO_PIN_{{pin[2:]}}
{% set _ = "" %}
        {%- endif %}
    {%- endfor %}
{%- endblock %}

{%- block functions_prototypes %}
/**
 * @brief configure gpio
 */
void csplink_gpio_init(void);
{%- endblock %}
